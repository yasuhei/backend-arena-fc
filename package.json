{
    "name": "futebol-backend",
    "version": "1.0.0",
    "description": "Backend para gerenciar jogadores do Arena FC",
    "main": "server.js",
    "type": "module",
    "scripts": {
        "start": "node server.js",
        "dev": "node --watch server.js",
        "build": "echo \"No build step\"",
        "backup": "node scripts/backup.js create",
